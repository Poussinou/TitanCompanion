<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/adventureVitalStats"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <TextView
        android:id="@+id/armorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/crewmanSpinner"
        android:layout_marginTop="10dp"
        android:text="@string/robotArmor"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/armorValue"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/armorText"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/bonusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/armorValue"
        android:layout_marginTop="10dp"
        android:text="@string/robotBonus"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/bonusValue"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/armorValue"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@+id/armorValue"
        android:layout_alignTop="@+id/bonusText"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/speedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/bonusValue"
        android:layout_marginTop="10dp"
        android:text="@string/robotSpeed"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Spinner
        android:id="@+id/speedValue"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/armorValue"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@+id/armorValue"
        android:layout_alignTop="@+id/speedText"
        android:entries="@array/robotSpeeds"
        android:ems="10" />

    <TextView
        android:id="@+id/specialAbilityText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/speedValue"
        android:layout_marginTop="10dp"
        android:text="@string/robotSpecialAbility"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/specialAbilityValue"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/armorValue"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@+id/armorValue"
        android:layout_alignTop="@+id/specialAbilityText"
        android:ems="10" />
    
   

</RelativeLayout>