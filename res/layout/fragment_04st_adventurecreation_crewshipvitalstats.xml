<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".adventurecreation.fragments.VitalStatisticsFragment" >

    <TextView
        android:id="@+id/section_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/scienceOfficer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/section_label"
        android:layout_below="@+id/section_label"
        android:text="@string/scienceOfficer"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/scienceOfficerSkill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/scienceOfficer"
        android:layout_below="@+id/scienceOfficer"
        android:text="@string/skill"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/medicalOfficer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/scienceOfficerSkill"
        android:layout_below="@+id/scienceOfficerSkill"
        android:text="@string/medicalOfficer"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/medicalOfficerSkill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/medicalOfficer"
        android:layout_below="@+id/medicalOfficer"
        android:text="@string/skill"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/engineeringOfficer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/medicalOfficerSkill"
        android:layout_below="@+id/medicalOfficerSkill"
        android:text="@string/engineeringOfficer"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/securityOfficer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView8"
        android:text="@string/securityOfficer"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/shipWeapons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ship"
        android:layout_below="@+id/ship"
        android:text="@string/weapons"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/securityOfficerSkill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/securityOfficer"
        android:text="@string/skill"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/securityGuard1Skill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/securityOfficerSkill"
        android:layout_below="@+id/securityGuard1"
        android:text="@string/skill"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/securityGuard2Skill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/securityGuard1Skill"
        android:layout_below="@+id/securityGuard2"
        android:text="@string/skill"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/engineeringOfficer"
        android:text="@string/skill"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/securityGuard1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/securityOfficer"
        android:layout_below="@+id/securityOfficerSkill"
        android:text="@string/securityGuard1"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/securityGuard2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/securityGuard1Skill"
        android:layout_below="@+id/securityGuard1Skill"
        android:text="@string/securityGuard2"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/ship"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/securityGuard2Skill"
        android:layout_below="@+id/securityGuard2Skill"
        android:text="@string/ship"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>