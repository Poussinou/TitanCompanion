<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/adventureVitalStats"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:useDefaultMargins="true"
    tools:context=".adventure.impl.fragments.AdventureCombatFragment" >

    <TextView
        android:id="@+id/textField1"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="@string/skill"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/minusSkillButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/plusSkillButton"
        android:layout_alignTop="@+id/plusSkillButton"
        android:layout_toLeftOf="@+id/enemySkill"
        android:text="@string/minus" />

    <TextView
        android:id="@+id/enemySkill"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/plusSkillButton"
        android:layout_alignTop="@+id/plusSkillButton"
        android:layout_toLeftOf="@+id/plusSkillButton"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/plusSkillButton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignRight="@+id/buttonAttack"
        android:layout_alignTop="@+id/textField1"
        android:text="@string/plus" />

    <TextView
        android:id="@+id/textField2"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/textField1"
        android:layout_below="@+id/textField1"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/stamina"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/minusStaminaButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/plusStaminaButton"
        android:layout_alignTop="@+id/plusStaminaButton"
        android:layout_toLeftOf="@+id/enemyStamina"
        android:text="@string/minus" />

    <TextView
        android:id="@+id/enemyStamina"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/plusStaminaButton"
        android:layout_alignTop="@+id/plusStaminaButton"
        android:layout_toLeftOf="@+id/plusStaminaButton"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/plusStaminaButton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignRight="@+id/buttonAttack"
        android:layout_alignTop="@+id/textField2"
        android:text="@string/plus" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/textField2"
        android:layout_below="@+id/textField2"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/handicap"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/minusHandicapButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/plusHandicapButton"
        android:layout_alignTop="@+id/plusHandicapButton"
        android:layout_toLeftOf="@+id/handicap"
        android:text="@string/minus" />

    <TextView
        android:id="@+id/handicap"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/plusHandicapButton"
        android:layout_alignTop="@+id/plusHandicapButton"
        android:layout_toLeftOf="@+id/plusHandicapButton"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/plusHandicapButton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignRight="@+id/buttonAttack"
        android:layout_alignTop="@+id/textView3"
        android:text="@string/plus" />

    <Button
        android:id="@+id/buttonEscape"
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="@string/escape" />

    <Button
        android:id="@+id/buttonTestCombatLuck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/buttonEscape"
        android:layout_alignLeft="@+id/buttonAttack"
        android:layout_toLeftOf="@+id/buttonEscape"
        android:text="@string/testLuck" />

    <Button
        android:id="@+id/buttonAttack"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonEscape"
        android:layout_alignRight="@+id/buttonEscape"
        android:text="@string/attackOpponent" />

    <TextView
        android:id="@+id/combatResult"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonAttack"
        android:layout_alignLeft="@+id/buttonAttack"
        android:lines="4"
        android:maxLines="4"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>