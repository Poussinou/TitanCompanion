<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/adventureVitalStats"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:useDefaultMargins="true"
    tools:context=".adventure.impl.fragments.st.STPhaserCombatFragment" >

    <TextView
        android:id="@+id/combatResult"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/addCombatButton"
        android:layout_alignLeft="@+id/attackButton"
        android:lines="5"
        android:maxLines="5"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <GridLayout
        android:id="@+id/combatantGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/combatResult"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:rowCount="3"
        android:columnCount="2"/>

    <Button
        android:id="@+id/attackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/addCombatButton"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/combatantGrid"
        android:text="@string/combatTurn" />

    <Button
        android:id="@+id/addCombatButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/attackButton"
        android:layout_alignLeft="@+id/combatantGrid"
        android:text="@string/addCombat" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/addCombatButton"
        android:layout_alignBottom="@+id/addCombatButton"
        android:layout_alignRight="@+id/attackButton"
        android:textOn="Phaser"
        android:textOff="Normal"  />

</RelativeLayout>