<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/adventureVitalStats"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="3dp" >


    <TextView
        android:id="@+id/aod_division_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/aod_division_total_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_alignStart="@+id/aod_division_name"
        android:layout_below="@+id/aod_division_name"
        android:gravity="center"
        android:text="@string/total"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/aod_division_minusDivisionTotalButton"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/aod_division_total_text"
        android:layout_alignTop="@+id/aod_division_total_text"
        android:layout_toRightOf="@id/aod_division_total_text"
        android:gravity="center"
        android:padding="0dp"
        android:text="@string/minus" />

    <TextView
        android:id="@+id/aod_division_totalValue"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/aod_division_minusDivisionTotalButton"
        android:layout_alignBottom="@+id/aod_division_minusDivisionTotalButton"
        android:layout_toRightOf="@+id/aod_division_minusDivisionTotalButton"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/aod_division_plusDivisionTotalButton"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/aod_division_totalValue"
        android:layout_alignTop="@id/aod_division_totalValue"
        android:layout_toRightOf="@id/aod_division_totalValue"
        android:gravity="center"
        android:padding="0dp"
        android:text="@string/plus" />



</RelativeLayout>