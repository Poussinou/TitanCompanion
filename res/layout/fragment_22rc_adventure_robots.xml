<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/adventureVitalStats"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:useDefaultMargins="true"
    tools:context="pt.joaomneto.ffgbutil.adventure.impl.fragments.rc.RCAdventureRobotFragment" >

    <LinearLayout
        android:id="@+id/robot0"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:padding="0dp" />

    <LinearLayout
        android:id="@+id/robot1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/robot0"
        android:orientation="vertical"
        android:padding="0dp" />

    <LinearLayout
        android:id="@+id/robot2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/robot1"
        android:orientation="vertical"
        android:padding="0dp" />

    <LinearLayout
        android:id="@+id/robot3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/robot2"
        android:orientation="vertical"
        android:padding="0dp" />

    <LinearLayout
        android:id="@+id/robot4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/robot3"
        android:orientation="vertical"
        android:padding="0dp" />

    <LinearLayout
        android:id="@+id/robot5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/robot4"
        android:orientation="vertical"
        android:padding="0dp" />

    <Button
        android:id="@+id/addRobotButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/addRobot"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/robot0"
        android:layout_alignEnd="@+id/robot0" />

</RelativeLayout>