            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".AdventureCreationPhaseListActivity" />
        </activity>
        <activity
            android:name="pt.joaomneto.ffgbutil.LoadAdventureActivity"
            android:label="@string/title_activity_load_adventure" >
        </activity>
        <activity
            android:name="pt.joaomneto.ffgbutil.ErrorActivity"
